@model IEnumerable<Storefront.DATA.EF.Models.Universe>

@{
    ViewData["Title"] = "Universes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Universe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniverseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniverseDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniverseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniverseDesc)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.UniverseId" class="btn btn-secondary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.UniverseId" class="btn btn-secondary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.UniverseId" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
