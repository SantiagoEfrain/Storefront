@model IEnumerable<Storefront.DATA.EF.Models.ModelScale>

@{
    ViewData["Title"] = "Model Scale";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScaleSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScaleSize)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ScaleId" class="btn btn-secondary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.ScaleId" class="btn btn-secondary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ScaleId" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
